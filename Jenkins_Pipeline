pipeline {
    
    agent any
    
    environment{
        PATH = "/opt/maven/bin:$PATH"
    }
    
    stages {
        stage("Hello World") {
            steps{
                echo "Hello World"
            }
        }
        
        stage("Git Connectivity") {
            steps{
                git 'https://github.com/patilnishant789/devops.git'
                
            }
        }
        
        stage("Maven Build") {
            steps{
                sh "mvn clean package"
            }
        }
    }
}
